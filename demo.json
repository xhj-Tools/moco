  {
    "description": "带参数的get请求，p1,p2分别的参数1，参数2，名称可随便起，个数也可随便加",
    "request": {
        "uri": "/api/message/v1/plist",
        "method": "get",
        "queries": {
            "count": "10",
            "sinceId": "0",
            "maxId": "0"
        }
    },
    "response": {
        "text": "this is a get method with paramter"
    }

    },
    {
        "description": "带header的get请求",
        "request": {
            "uri": "/api/message/v1/hlist",
            "method": "get",
            "headers": {
              "content-type": "application/json"
            }
          },
            "response":{
              "json":{
                "message":"success header get list",
                "status":"1"
              }
            }
          
    },
    {
